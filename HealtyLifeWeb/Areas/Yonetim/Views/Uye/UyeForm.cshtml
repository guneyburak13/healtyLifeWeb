@model ENT.ent_UYELER
@{
    ViewBag.Title = "UyeForm";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}

<h2>Haber Form</h2>

<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" action="@Url.Action("CreateUye","Uye")" method="post">
            <div class="box-body">
                <div class="form-group">
                    <label class="col-sm-2 control-label">Üye Adı</label>
                    <div class="col-sm-10">
                        <input type="hidden" name="uye_id" value="@this.Model.uye_id" />
                        <input type="text" name="uye_ad_soyad" class="form-control" placeholder="Ad Soyad" value="@this.Model.uye_ad_soyad" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Üye Kullanıcı Adı</label>
                    <div class="col-sm-10">
                        <input type="text" name="uye_kullanici_adi" class="form-control" value="@this.Model.uye_kullanici_adi" placeholder="Kullanıcı Adı">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Üye Şifre</label>
                    <div class="col-sm-10">
                        <input type="text" name="uye_sifre" class="form-control" value="@this.Model.uye_sifre" placeholder="Üye Şifre" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Üye Telefon</label>
                    <div class="col-sm-10">
                        <input type="text" name="uye_telefon" class="form-control" value="@this.Model.uye_telefon" placeholder="Üye Telefon" />
                    </div>
                </div>
                <div class="form-group">
                    <label  class="col-sm-2 control-label">Üye Mail</label>
                    <div class="col-sm-10">
                        <input type="text" name="uye_mail" class="form-control" value="@this.Model.uye_mail" placeholder="Üye Mail" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Üye Fotoğrafı</label>
                    <div class="col-sm-10">
                        <input type="file" name="uye_foto_url" class="form-control" value="@this.Model.uye_foto_url" placeholder="Üye Fotoğrafı" />
                    </div>
                </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Üye Kayıt Tarihi</label>
                    <div class="col-sm-10">
                        <input type="date" name="uye_kayit_tarihi" id="start"  max="2018-12-31" class="form-control" value="@this.Model.uye_kayit_tarihi" placeholder="Üye Kayıt Tarihi" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-2">&nbsp;</label>
                    <div class="col-sm-6">
                        <div class="checkbox icheck">
                            <label>
                                <input type="checkbox" name="hbr_ispassive" value="true" @(this.Model.uye_ispassive ? "checked" : "") /> Pasif Yap
                            </label>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <a href="@Url.Action("UyeList", "Uye")" class="btn btn-default"><i class="fa fa-reply"></i> İptal</a>
                <button type="submit" class="btn btn-info pull-right"><i class="fa fa-save"></i> Kaydet</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
</section>
