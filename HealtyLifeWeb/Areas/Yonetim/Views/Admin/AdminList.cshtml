@model List<ENT.ent_ADMIN>

@{
    ViewBag.Title = "AdminList";
}

<h2>Admin Listesi</h2>


<div class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Admin Tablosu</h3>
            <div class="box-tools">
                <a href="@Url.Action("AdminForm", "Admin")" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Yeni Admin Oluştur</a>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 10px">SN.</th>
                        <th>Admin Ad Soyad</th>
                        <th>Kullanıcı Adı</th>
                        <th>Pasif</th>
                        <th style="width: 80px">İşlem</th>
                    </tr>
                    @{int s = 1;}
                    @foreach (ENT.ent_ADMIN item in this.Model)
                    {
                        <tr>
                            <td>@s</td>
                            <td>@item.adm_name</td>
                            <td>@item.adm_kullanici_adi</td>
                            <td>@(item.adm_ispassive ? "Pasif" : "Aktif")</td>
                            <td>
                                <a href="@Url.Action("AdminForm", "Admin", new { adm_id = item.adm_id })" class="btn btn-info btn-sm" title="İncele"><i class="fa fa-search"></i></a>
                            </td>
                        </tr>
                        s++;
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            @ViewBag.pagination
        </div>
    </div>
</div>
