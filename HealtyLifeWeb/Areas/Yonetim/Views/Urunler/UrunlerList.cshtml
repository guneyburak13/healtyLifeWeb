@model List<ENT.ent_URUNLER>


@{
    ViewBag.Title = "UrunlerList";
    Layout = "~/Areas/Yonetim/Views/Shared/_Layout.cshtml";
}
<h2>Ürünler Listesi</h2>

<div class="content">
    <div class="box">
        <div class="box-header with-border">
            <h3 class="box-title">Ürün Tablosu</h3>
            <div class="box-tools">
                <a href="@Url.Action("UrunForm", "Urunler")" class="btn btn-success btn-sm"><i class="fa fa-plus"></i> Yeni Ürün Oluştur</a>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">

            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th style="width: 10px">SN.</th>
                        <th>Ürün Adı</th>
                        <th>Kategori Adı</th>
                        <th>Ürün Fırması-Sahibi</th>
                        <th>Ürün Fiyatı</th>
                        <th>Ürün Detayı</th>
                        <th>Ürün Fotoğrafı</th>
                        <th>Ürün Tarihi</th>
                        <th>Ürün Pasif-Aktif</th>
                        <th style="width: 80px">İşlem</th>
                    </tr>
                    @{int s = 1;}
                    @foreach (ENT.ent_URUNLER item in this.Model)
                    {
                        <tr>
                            <td>@s</td>
                            <td>@item.urun_adi</td>
                            <td>@item.urun_kategori_adi</td>
                            <td>@item.urun_uye_adi</td>
                            <td>@item.urun_fiyat</td>
                            <td>@item.urun_detay </td>
                            <td width="50" height="50"><img src="~/Content/images/@item.urun_foto_url" height="70" width="90" alt="@item.urun_adi" /></td>
                            <td>@item.urun_tarih</td>
                            <td>@(item.urun_ispassive ? "Pasif" : "Aktif")</td>
                            <td>
                                <a href="@Url.Action("UrunForm", "Urunler", new { urun_ID = item.urun_id })" class="btn btn-info btn-sm" title="İncele"><i class="fa fa-search"></i></a>
                            </td>
                        </tr>
                        s++;
                    }
                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
        <div class="box-footer clearfix">
            @ViewBag.pagination
        </div>
    </div>
</div>