<!-- banner part start-->
<!-- feature_part start-->
<section class="feature_part padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_tittle text-center">
                    <h2>Ürünlerimiz</h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
            @foreach (ENT.ent_URUNLER item in urunler)
            {
                <div class="col-lg-6 col-sm-6">
                    <div style="border-radius:8%;" class="single_feature_post_text">
                        <p>@item.urun_adi</p>
                        <h3>$ @item.urun_fiyat</h3>
                        <h3 ><u style="color:burlywood">@item.urun_uye_adi</u></h3>
                        <a href="@Url.Action("UrunGoruntule","Home",new {urun_id=item.urun_id })" class="feature_btn">Ürün Detay <i class="fa fa-arrow-right"></i></a>
                        <img href="@Url.Action("UrunGoruntule","Home",new {urun_id=item.urun_id })" style="width:262px; height:279px; border-bottom-right-radius:8%; border-top-left-radius:8%;" src="~/Content/images/@item.urun_foto_url" alt="">
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!-- upcoming_event part start-->
<!-- product_list start-->


<section class="product_list best_seller section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2 style="color:lightcoral">Best Sellers </h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-12">
                <div class="best_product_slider owl-carousel">
                    @foreach (ENT.ent_URUNLER item in urunler)
                    {
                        <div class="single_product_item">
                            <img style="width:262px; height:279px; border-bottom-right-radius:8%; border-top-left-radius:8%;" src="~/Content/images/@item.urun_foto_url" alt="">
                            <div class="single_product_text">
                                <h4>@item.urun_adi</h4>
                                <h3>$ @item.urun_fiyat</h3>
                                 <a href="@Url.Action("UrunGoruntule","Home",new {urun_id=item.urun_id })" class="add_cart"> Ürün Detay<i class="fa fa-arrow-right"></i></a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- product_list part start-->
<!-- awesome_shop start-->
<section class="our_offer section_padding">
    <div class="container">
        <div class="row align-items-center justify-content-between">
            <div class="col-lg-6 col-md-6">
                <div class="offer_img">
                    <img style="border-radius:8%;max-width:75%;" src="~/Content/images/1.jpeg" alt="">
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="offer_text">
                    <h2>
                        %60 İndirm İçin Son
                    </h2>
                    <div class="date_countdown">
                        <div id="timer">
                            <div id="days" class="date"><span>Gün</span>34</div>
                            <div id="hours" class="date"><span>Saat</span>12</div>
                            <div id="minutes" class="date"><span>Dakika</span>32</div>
                            <div id="seconds" class="date"><span>Saniye</span>56</div>
                        </div>
                    </div>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="mail adresinizi giriniz"
                               aria-label="Recipient's username" aria-describedby="basic-addon2">
                        <div class="input-group-append">
                            <a href="#" class="input-group-text btn_2" id="basic-addon2">şimdi sepete ekle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
