
@{
    ViewBag.Title = "Iletisim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #wrapper {
        width: 100%;
        height: 100%;
        position: fixed;
        top: 0;
        left: 0;
        background: rgba(0, 0, 0, .5);
        z-index: 9999;
    }

    #message-sent {
        width: 340px;
        height: 60px;
        line-height: 60px;
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -30px;
        margin-left: -170px;
        font-weight: 600;
        border-radius: 0 16px;
        color: #191970;
        background: white;
        box-shadow: 0 0 20px 4px #0d6636;
    }

    #close-button {
        width: 18px;
        height: 18px;
        line-height: 18px;
        text-align: center;
        position: absolute;
        top: -8px;
        right: -8px;
        background: white;
        border-radius: 0 8px;
        border: 1px solid #0d6636;
        cursor: pointer;
        font-weight: 600;
    }

    .validation-summary input {
        list-style: none;
    }

    .input-validation-error {
        border-color: red;
    }
</style>

<div style="padding:8px; margin:5px; padding-top:150px; " class="content-text">
    <br />
    <br />
    <h2 style="text-align:center;">Neredeyiz?</h2>
    <div style="text-align:center;" id="google-maps">
        <iframe width="800" height="420" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=tr&amp;geocode=&amp;q=kad%C4%B1k%C3%B6y&amp;aq=&amp;sll=37.0625,-95.677068&amp;sspn=61.928102,135.263672&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=Kad%C4%B1k%C3%B6y%2F%C4%B0stanbul,+T%C3%BCrkiye&amp;ll=40.980141,29.08227&amp;spn=0.117381,0.264187&amp;z=13&amp;output=embed"></iframe><br /><small><a href="https://maps.google.com/maps?f=q&amp;source=embed&amp;hl=tr&amp;geocode=&amp;q=kad%C4%B1k%C3%B6y&amp;aq=&amp;sll=37.0625,-95.677068&amp;sspn=61.928102,135.263672&amp;t=h&amp;ie=UTF8&amp;hq=&amp;hnear=Kad%C4%B1k%C3%B6y%2F%C4%B0stanbul,+T%C3%BCrkiye&amp;ll=40.980141,29.08227&amp;spn=0.117381,0.264187&amp;z=13" style="color:#0000FF;text-align:right">Daha Büyük Görüntüle</a></small>
    </div>

    <h2 style="padding-left:30px; padding-bottom:10px;">İletişim</h2>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contact-form", action = "Iletisim" }))
    {
        if (ViewBag.Success != null && ViewBag.Success)
        {
            <div class="alert">
                <span class="closebtn" onclick="this.parentElement.style.display='none';"></span>
                Mesajınız başarıyla iletildi
            </div>
        }


        <div style="padding-left:30px; padding-right :30px;" class="section-row">
            <div class="section-title">
                <h2>Bize cevap bırakın</h2>
                <p>E-posta hesabınız yayımlanmayacak. Gerekli alanlar işaretlendi *</p>
            </div>
            <form class="post-reply">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            @Html.ValidationSummary(true, "", new { @class = "alert alert-danger validation summary" })
                            <span>Kullanıcı Adı</span>
                            <input class="form-control" name="NickName" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" placeholder="Kullanıcı adı">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <span>Ad Soyad</span>
                            <input class="form-control" name="FullName" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" placeholder="Ad Soyad">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <span>Email</span>
                            <input class="form-control" name="Email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" placeholder="Email Adresi">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <span>Telefon</span>
                            <input class="form-control" name="Phone" type="tel" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" placeholder="Telefon Numarası">
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <textarea class="form-control w-100" name="Message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" placeholder="Masjınızı Oluşturun.."></textarea>
                        </div>
                        <button class="primary-button">Gönder</button>
                    </div>
                </div>
            </form>
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        $(".obligation-button").click(function () {
            $(".contact-line-unrequired").slideToggle();
        });
    });

    function formEksikMi() {
        var rumuzDegeri = document.getElementById("input-nickname").value;
        var epostaDegeri = document.getElementById("input-email").value;
        var iletiDegeri = document.getElementById("input-text").value;
        if (rumuzDegeri === "" || iletiDegeri === "" || epostaDegeri === "") {
            alert("Lütfen gerekli alanlari doldurunuz.");
            return false;
        }
    }
</script>
<script>
    $('#wrapper').click(function () {
        $(this).fadeOut('slow');
    });
</script>

